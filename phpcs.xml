<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg value="spv"/>
    <ini name="memory_limit" value="128M"/>

    <file>./app</file>
    <file>./config</file>
    <file>./resources</file>
    <file>./routes</file>
    <file>./tests</file>

    <rule ref="./vendor/mreduar/laravel-phpcs/phpcs.xml">
        <exclude name="Generic.Commenting.DocComment.MissingShort"/>
    </rule>
</ruleset>
